<div class="row d-flex justify-content-center">
  <div class="col-md-10">
    <h1>Reminders</h1>

<table class="table table-hover">
  <thead>
   <tr>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">Thing</th>
      <th scope="col">Horse</th>
      <th scope="col">x</th>

    </tr>
    <head>
  <tbody>
<% @reminders.each do |rem| %>
<div>
  <tr>
  <td> <%= rem.date.strftime('%B %d %Y') %> </td>
    <td> <%= rem.date.strftime('%I:%M%p') %> </td>
 <td>   <%= rem.body %> </td>
  <td>   <%= rem.horse.name if rem.horse.present? %> </td>
  <td><%=link_to "Delete this reminder", reminder_path(rem),
    data: {confirm: 'Are you sure?'},
    method: :delete, class: "text-danger" %> </td>

</tr>
</div>
<% end %>
<tbody>
</table>
</div>

</div>
