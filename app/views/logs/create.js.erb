
<% if @log.errors.any? %>
 $('#new_log').replaceWith("<%= j render '/logs/form' %>")
<% else %>
$('.log-row').append("<%= j render '/logs/log', log: @log %>");

 <%# we need to reset @log before rendering the form because at this point
      @log refers to the persisted log we just created in the database so
      the form will submit to the `update` action instead of the `create` action
      unless we reset `@log` to become `log.new`
      %>

  <% @log = Log.new %>
  $('#new_log').replaceWith("<%= j render '/logs/form' %>");
<% end %>
